                let serial = $("#SerialNumber").val();
                if (item && location) {
                    //$("#itemsContainer").prepend(`<div class="item-card"><span class="delete-icon" onclick="RemoveItem(this)">&#128465;</span><span id="item_${itemCount}"> ${item} - ${location} - ${serial}</span></div>`);
